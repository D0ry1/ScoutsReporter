<Application x:Class="ScoutsReporter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ScoutsReporter.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="NunitoSans">pack://application:,,,/Fonts/#Nunito Sans</FontFamily>

        <DropShadowEffect x:Key="PopupDropShadow" BlurRadius="10" ShadowDepth="3"
                          Opacity="0.3" Color="#000000" />

        <converters:FlagToColorConverter x:Key="FlagToColorConverter" />
        <converters:FlagToBackgroundConverter x:Key="FlagToBackgroundConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <!-- Apply Nunito Sans globally -->
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource NunitoSans}" />
        </Style>

        <Style x:Key="FlagCell" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="4,2" />
        </Style>
    </Application.Resources>
</Application>
